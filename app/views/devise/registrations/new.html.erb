
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation", novalidate: true }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="mb-3">
         <h2 class= "btn btn-primary w-100">Ragistration</h2>
          <%= f.label :full_name, class: "form-label required" %>
          <%= f.text_field :full_name, class: "form-control", autofocus: true, required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :mobile_number, class: "form-label required" %>
          <%= f.text_field :mobile_number, class: "form-control", autofocus: true, required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :address, class: "form-label required" %>
          <%= f.text_field :address, class: "form-control", autofocus: true, required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :email, class: "form-label required" %>
          <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: "form-label required" %>
          <% if @minimum_password_length %>
            <small class="form-text text-muted">
              (<%= @minimum_password_length %> characters minimum)
            </small>
          <% end %>
          <%= f.password_field :password, class: "form-control", autocomplete: "new-password", required: true %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label required" %>
          <%= f.password_field :password_confirmation, class: "form-control", autocomplete: "new-password", required: true %>
        </div>

        <div class="mb-3">
          <%= f.submit "Sign up", class: "btn btn-primary w-100" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

<style>
  .form-label.required::after {
    content: "*";
    color: red;
    margin-left: 0.25em;
  }
</style>
